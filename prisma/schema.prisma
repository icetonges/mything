// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyNote {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  content       String    @db.Text
  mood          Int?
  tags          String[]
  quickType     String?
  headline      String?
  summary       String?   @db.Text
  keyIdeas      String?   @db.Text
  actionItems   String?   @db.Text
  themes        String[]
  sentiment     String?
  slug          String?   @unique
  aiProcessedAt DateTime?
  deleted       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  @@map("daily_notes")
}

model TechArticle {
  id          String   @id @default(cuid())
  title       String
  url         String   @unique
  source      String
  category    String
  summary     String   @db.Text
  publishedAt DateTime
  createdAt   DateTime @default(now())
  @@map("tech_articles")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
  @@map("contacts")
}

model ChatHistory {
  id        String   @id @default(cuid())
  sessionId String
  role      String
  content   String   @db.Text
  page      String?
  createdAt DateTime @default(now())
  @@index([sessionId])
  @@map("chat_history")
}

model FamilyNote {
  id        String   @id @default(cuid())
  content   String   @db.Text
  category  String?
  createdAt DateTime @default(now())
  @@map("family_notes")
}
